<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantActivity">

    <ScrollView
        android:id="@+id/scrollPrincipal"
        android:layout_width="0dp"
        android:layout_height="227dp"
        android:layout_marginTop="55dp"
        app:layout_constraintBottom_toTopOf="@+id/img_valorar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_menu2">

        <LinearLayout
            android:id="@+id/linearScroll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </ScrollView>

    <ImageView
        android:id="@+id/img_menu2"
        android:layout_width="0dp"
        android:layout_height="265dp"
        android:layout_weight="1"
        android:layout_x="-3dp"
        android:layout_y="10dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.269"
        app:srcCompat="@drawable/burger_restaurant_1" />

    <TextView
        android:id="@+id/puntuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_x="43dp"
        android:layout_y="325dp"
        android:text="4.7"
        android:textColor="#090909"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView16"
        app:layout_constraintTop_toBottomOf="@+id/img_menu2" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="340dp"
        android:layout_x="3dp"
        android:layout_y="319dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_menu2"
        app:layout_constraintVertical_bias="0.007"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/direccion_res"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:layout_x="108dp"
        android:layout_y="325dp"
        android:text="Direccion"
        android:textColor="#090909"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/puntuacion"
        app:layout_constraintTop_toBottomOf="@+id/img_menu2" />

    <TextView
        android:id="@+id/count_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_x="271dp"
        android:layout_y="320dp"
        android:fontFamily="sans-serif-black"
        android:text="15"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/direccion_res"
        app:layout_constraintTop_toBottomOf="@+id/img_menu2" />

    <ImageView
        android:id="@+id/imageButton6"
        android:layout_width="39dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_x="362dp"
        android:layout_y="310dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toEndOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/img_menu2"
        app:srcCompat="@drawable/comments" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="61dp"
        android:layout_height="53dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:layout_x="5dp"
        android:layout_y="3dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_51059" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_x="90dp"
        android:layout_y="5dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@+id/imageView14"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_021_03_31_23_57_04" />

    <TextView
        android:id="@+id/restaurant_name2"
        android:layout_width="324dp"
        android:layout_height="38dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="64dp"
        android:layout_x="3dp"
        android:layout_y="279dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-black"
        android:text="Nombre Restaurante"
        android:textColor="#090909"
        android:textSize="29sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/return_window2"
        android:layout_width="49dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_x="5dp"
        android:layout_y="3dp"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/restaurant_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_1" />

    <ImageButton
        android:id="@+id/img_valorar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_valorar" />
</androidx.constraintlayout.widget.ConstraintLayout>