<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="364dp"
        android:layout_height="253dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:layout_x="-3dp"
        android:layout_y="10dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burger_restaurant" />

    <TextView
        android:id="@+id/precio"
        android:layout_width="148dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="220dp"
        android:layout_x="2dp"
        android:layout_y="231dp"
        android:background="@drawable/rectangulo"
        android:fontFamily="sans-serif-black"
        android:text="20-30 min"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/img_menu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="366dp"
        android:layout_height="35dp"
        android:layout_x="3dp"
        android:layout_y="279dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-black"
        android:text="Nombre Restaurante"
        android:textAlignment="center"
        android:textColor="#090909"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_menu" />

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="314dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:editable="false"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Aqui vamos a poner una pequea descripcion de los ingredientes que lleva el plato que estamos mostrando"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_name" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="410dp"
        android:layout_height="21dp"

        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_desc"
        app:srcCompat="@drawable/fire" />

    <TextView
        android:id="@+id/calorias"
        android:layout_width="180dp"
        android:layout_height="18dp"
        android:layout_weight="1"
        android:text="3500kcal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

</androidx.constraintlayout.widget.ConstraintLayout>