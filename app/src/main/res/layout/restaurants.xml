<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="0dp"
        android:layout_height="265dp"
        android:layout_weight="1"
        android:layout_x="-3dp"
        android:layout_y="10dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        app:srcCompat="@drawable/burger_restaurant_1" />

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="405dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_x="3dp"
        android:layout_y="279dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-black"
        android:text="Nombre Restaurante"
        android:textColor="#090909"
        android:textSize="29sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_menu" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:layout_x="3dp"
        android:layout_y="319dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_menu"
        app:layout_constraintVertical_bias="0.007"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="3dp"
        android:layout_x="43dp"
        android:layout_y="325dp"
        android:text="4.7"
        android:textColor="#090909"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView8" />

    <TextView
        android:id="@+id/type"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="3dp"
        android:layout_x="108dp"
        android:layout_y="325dp"
        android:text="Direccion"
        android:textColor="#090909"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/note" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="3dp"
        android:layout_x="271dp"
        android:layout_y="320dp"
        android:fontFamily="sans-serif-black"
        android:text="15"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/type" />

    <ImageView
        android:id="@+id/imageButton2"
        android:layout_width="39dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="3dp"
        android:layout_x="362dp"
        android:layout_y="310dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toEndOf="@+id/price"
        app:srcCompat="@drawable/comments" />


</androidx.constraintlayout.widget.ConstraintLayout>